<% if notice.present? %>
<p class="alert alert-info">
	<%= notice %>
</p>
<% end %>

<h2>
  <strong>Title:</strong>
  <%= @post.title %>
</h2>

<h2>
  <strong>Content:</strong>
  <%= @post.content %>
</h2>

<p>
	<div class="text-muted">
	posted on <%= @post.created_at.to_formatted_s(:long) %>
	</div>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
